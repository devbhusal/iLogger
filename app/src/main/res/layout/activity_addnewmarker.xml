<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="devbhusal.iloggerproject.addnewmarker">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/markname"
        android:hint="Type Marker name"
        android:background="#feffd9"
        android:inputType="text" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Place info"
        android:id="@+id/test" />

    <Button
        android:background="@drawable/genoa"
        style="@style/genoa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan wifi"
        android:id="@+id/button11"
        android:onClick="showwifiscanmobilemode"
        />
    <Button
        android:background="@drawable/genoa"
        style="@style/genoa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan bluetooth"
        android:id="@+id/button12"
        android:onClick="showbluescanmobile"
        />
    <Button
        android:background="@drawable/genoa"
        style="@style/genoa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Take Picture"
        android:id="@+id/button13"
        android:onClick="capturenewimage"
        />
    <Button
        android:background="@drawable/genoa"
        style="@style/genoa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Record audio"
        android:id="@+id/button14"
        android:onClick="recordnewaudio"
        />



    <Button
        android:background="@drawable/genoa"
        style="@style/genoa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save to database"
        android:id="@+id/button7"
        android:onClick="savenewmarker"
        />


</LinearLayout>
